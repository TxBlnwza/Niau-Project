// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userid    Int     @id @default(autoincrement())
  email String  @unique
  username  String?
  password String?
  role type @default(user)
}

enum type {
  admin 
  user
}

model ProductDetail {
  productID Int    @id @default(autoincrement())
  brand String
  image String
  model String?
  color String
  colorNumber String?
  colorName String
  glowy Int?
  matte Int?
  longLasting Int?
  price  Float
  amout Float
  whereToBuy  String
  skinTone  Tone
  productType category
}

enum Tone {
  warm
  cool
  neutral
}

enum category {
  Lipstick
  BlushOn
  Foundation
  EyeBrown
  Powder
  EyeShadow
}

